@using EntityLayer.Concrete
@model List<Product> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ürün Listesi</h3>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Stok</th>
        <th>Fiyat</th>
        <th>Kategori</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                </tr>
            }
</table>

